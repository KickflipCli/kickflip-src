{
    "name": "mallardduck/kickflip-monorepo",
    "description": "A monorepo for kickflip CLI and the docs for it to live in.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Dan Pock",
            "email": "self@danpock.me"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-filter": "*",
        "ext-json": "*",
        "codeat3/blade-file-icons": "^1.5",
        "illuminate/events": "^8.0",
        "illuminate/log": "^8.0",
        "illuminate/routing": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/view": "^8.0",
        "laravel-zero/framework": "^8.9",
        "league/commonmark": "^2.1",
        "mallardduck/blade-boxicons": "^2.1.2",
        "mallardduck/blade-emoji-icons": "^1.0",
        "mallardduck/laravel-traits": "dev-main",
        "samdark/sitemap": "^2.4",
        "spatie/emoji": "^2.3",
        "spatie/enum": "^3.11",
        "spatie/laravel-markdown": "^2.1",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.3",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symplify/monorepo-builder": "^10.0",
        "vimeo/psalm": "^4.14"
    },
    "replace": {
        "mallardduck/kickflip-cli": "0.5.0",
        "mallardduck/kickflip-docs": "0.5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "KickflipDocs\\": "packages/kickflip-docs/app/",
            "Kickflip\\": "packages/kickflip-cli/app/",
            "RepoBuilder\\": "src/"
        },
        "files": [
            "packages/kickflip-docs/app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KickflipMonoTests\\": "tests/",
            "KickflipTests\\": "packages/kickflip-cli/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "test": "XDEBUG_MODE=off vendor/bin/pest"
    }
}
