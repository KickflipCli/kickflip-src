{
    "name": "mallardduck/kickflip-monorepo",
    "description": "A monorepo for kickflip CLI and the docs for it to live in.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Dan Pock",
            "email": "self@danpock.me"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-filter": "*",
        "ext-json": "*",
        "codeat3/blade-file-icons": "^1.5",
        "illuminate/events": "^8.74",
        "illuminate/http": "^8.74",
        "illuminate/log": "^8.74",
        "illuminate/routing": "^8.74",
        "illuminate/support": "^8.74",
        "illuminate/view": "^8.74",
        "laravel-zero/framework": "^8.9.1",
        "league/commonmark": "^2.1",
        "mallardduck/blade-boxicons": "^2.1.2",
        "mallardduck/blade-emoji-icons": "^1.1",
        "mallardduck/laravel-traits": "dev-main",
        "samdark/sitemap": "^2.4",
        "spatie/emoji": "^3.0",
        "spatie/enum": "^3.11.1",
        "spatie/laravel-markdown": "^2.1.1",
        "symfony/yaml": "^6.0",
        "vlucas/phpdotenv": "^5.3.1"
    },
    "require-dev": {
        "illuminate/bus": "^8.74",
        "illuminate/collections": "^8.74",
        "illuminate/config": "^8.74",
        "illuminate/console": "^8.74",
        "illuminate/container": "^8.74",
        "illuminate/contracts": "^8.74",
        "illuminate/database": "^8.74",
        "illuminate/filesystem": "^8.74",
        "illuminate/testing": "^8.74",
        "laravel-zero/foundation": "^8.74",
        "mockery/mockery": "^1.4.3",
        "nunomaduro/collision": "^5.10",
        "pestphp/pest": "^1.21.1",
        "pestphp/pest-plugin-faker": "^1.0",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symplify/monorepo-builder": "^10.0",
        "vimeo/psalm": "^4.14"
    },
    "replace": {
        "mallardduck/kickflip": "0.5.4",
        "mallardduck/kickflip-cli": "0.5.4",
        "mallardduck/kickflip-docs": "0.5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "packages/kickflip/app/",
            "KickflipDocs\\": "packages/kickflip-docs/app/",
            "Kickflip\\": "packages/kickflip-cli/app/",
            "RepoBuilder\\": "src/"
        },
        "files": [
            "packages/kickflip-docs/app/helpers.php",
            "packages/kickflip/app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KickflipMonoTests\\": "tests/",
            "KickflipTests\\": "packages/kickflip-cli/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "test": "XDEBUG_MODE=off vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
