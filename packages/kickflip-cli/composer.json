{
    "name": "kickflip/kickflip-cli",
    "description": "A Laravel Zero based static site generator CLI tool.",
    "license": "MIT",
    "type": "library",
    "keywords": ["ssg", "static site generator", "laravel zero", "cli"],
    "authors": [
        {
            "name": "Dan Pock",
            "email": "self@danpock.me"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-filter": "*",
        "ext-json": "*",
        "illuminate/events": "^9.0",
        "illuminate/log": "^9.0",
        "illuminate/support": "^9.0",
        "illuminate/translation": "^9.0",
        "illuminate/view": "^9.0",
        "laravel-zero/framework": "^9.1.1",
        "league/commonmark": "^2.3",
        "mallardduck/html-formatter": "^1.0.1",
        "mallardduck/laravel-traits": "^0.3.3",
        "nunomaduro/termwind": "^1.13",
        "samdark/sitemap": "^2.4",
        "spatie/enum": "^3.12",
        "spatie/laravel-markdown": "^2.2.4",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "pestphp/pest": "^1.21.1",
        "phpunit/phpunit": "^9.5.21"
    },
    "replace": {
        "mallardduck/kickflip-cli": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Kickflip\\": "app/",
            "Illuminate\\": "illuminate/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KickflipTests\\": "tests/"
        }
    },
    "bin": [
        "bin/kickflip"
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.10-dev"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "test": "XDEBUG_MODE=off vendor/bin/pest"
    }
}
